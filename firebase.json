{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.py",
      "requirements.txt",
      "README.md"
    ],
    "headers": [
      {
        "source": "**/*_ohlcv_latest.json",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=86400"
          },
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods", 
            "value": "GET, OPTIONS"
          }
        ]
      }
    ],
    "cleanUrls": true
  }
}